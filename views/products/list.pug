extends ../layout

block content
        .row
            .col-sm-8
                 h1=title
            .col-sm-4
                a(href="products/add", class="btn btn-success ") Add New Course
            

       
        table.table
            thead
                tr
                    th Product Name
                    th Product Price 
                    th Actions 
            tbody
                each product in products
                    tr
                        td=product.name
                        td=product.price
                        td
                            a(href="/products/delete/"+product._id, class="btn btn-danger") Delete
                            a(href="/products/edit/"+product._id, class="btn btn-warning") Edit




    

